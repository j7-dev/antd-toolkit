{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"lib/*"
			]
		},
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src",
		"lib"
	],
	"exclude": [
		"lib/**/*.stories.tsx",
		"lib/**/*.stories.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"files": [
		"lib/main/types/env.d.ts",
		"lib/main/types/global.d.ts",
	],
	"declaration": false
}